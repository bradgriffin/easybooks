<h1>New account</h1>

<% form_for(@account) do |f| %>
  <%= f.error_messages %>
  <%= render :partial => 'form', :locals=>{:f=>f} %>
  <p>
    <%= f.label :opening_balance %><br />
    <%= f.text_field :opening_balance %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', @account %>
