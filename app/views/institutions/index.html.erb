<h1>Listing institutions</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Phone</th>
    <th colspan="2">Action</th>
  </tr>

<% for institution in @institutions %>
  <tr>
    <td><%= link_to (h institution.name), institution %></td>
    <td><%=h institution.description %></td>
    <td><%=h institution.phone %></td>
    <td><%= link_to 'Edit', edit_institution_path(institution) %></td>
    <td><%= link_to 'Destroy', institution, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New institution', new_institution_path %>
