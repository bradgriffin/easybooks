<tr class='transaction'> 
  <% form_for(transaction) do |f| %>
  <td>
    <table>
      <tr class='odd'>
        <td colspan="2" align=center ><%= f.date_select :date %></td>
      </tr>
      <tr class='even'>
        <td align=center><%= link_to 'Delete', transaction, :confirm => 'Are you sure?', :method => :delete, :class=>'link_button' %></td>
        <td> <%= f.submit "Update" %></td>
      </tr>
    </table>
  </td>
  <td>
    <table>
      <tr class='odd'>
        <td><%= f.text_field :check_num, :size=>10 %></td>
      </tr>
      <tr class='even'>
        <td><a name='<%=transaction.id%>'/></td>
      </tr>
    </table>
  </td>
  <td>
    <table>
      <tr class='odd'>
        <td colspan="2"><%= f.text_field :target, :size=>48  %></td>
      </tr>
      <tr class='even'>
        <td><%= select_tag 'transaction[category_id]', options_from_collection_for_select(@all_categories, 'id', 'long_name', transaction.category_id) %></td>
        <td colspan=1><%= f.text_field :description, :size=>30  %></td>
      </tr>
    </table>
  </td>
  <td>
    <table>
      <tr class='odd'>
        <td align=center><%= select_tag 'transaction[transaction_type_id]', options_from_collection_for_select(transaction_types, 'id', 'name', transaction.transaction_type_id) %></td>
      </tr>
      <tr class='even'>
        <td/>
      </tr>
    </table>
  </td>
  <td>
    <table>
      <tr class='odd'>
        <td><%= f.check_box :registered %></td>
      </tr>
      <tr class='even'>
        <td/>
      </tr>
    </table>
  </td>
  <td>
    <table>
      <tr class='odd'>
        <td colspan=1 align=right><%= text_field_tag "transaction[amount]", transaction.amount, {:size =>7, :text_align=>'right', :id=>'transaction_amount', :class => if transaction.transaction_type.is_debit? then 'debit' else 'credit' end} %></td>
      </tr>
      <tr class='even'>
        <td/>
      </tr>
    </table>
  </td>
  <td>
    <table>
      <tr class='odd'>
        <td class='balance' align=right><%= balance %></td>
      </tr>
      <tr class='even'>
        <td/>
      </tr>
    </table>
  </td>
  <% end %>
</tr>
